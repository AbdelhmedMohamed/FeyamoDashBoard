@model IEnumerable<HotelViewModel> ;

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">All Hotels</h1>
<br />



<a asp-controller="Hotel" asp-action="Create" class="btn btn-primary">Create New Hotel</a>

<br />


@if (!string.IsNullOrEmpty(TempData["Message"]as string))
{
    <div class="alert alert-primary mt-3">
        @TempData["Message"]
    </div>
}







@if(Model.Count() > 0)
{
    
    @foreach(var hotel in Model)
    {

        <div class="row d-inline-block mb-5">

            <div class="col-6 gx-5 gy-3">

                <div class="card" style="width: 35rem;">

                    @*  imges *@
                    <div id="@hotel.Id" class="carousel slide carousel-fade">
                        <div class="carousel-inner">

                            @{
                                // var images = new List<string> { "1.jpg", "22.jpeg", "3.jpeg" };

                                //var images = new List<hotel.>;
                            }

                            @for (int i = 0; i < hotel?.ImageNames?.Count; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">

                                    <img style="height:400px" src="~/Files/HotelImages/@hotel.ImageNames[i]" class="d-block w-100">
                                </div>
                            }


                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#@hotel.Id" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#@hotel.Id" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
             

                    <div class="card-body bg-light">
                        <h2 class="card-title">@hotel.Name</h2>
                        <p class="card-text font-weight-bold ">Today's price : @hotel.Price $</p>

                        <a asp-action="Edit" asp-route-id="@hotel.Id" class="btn btn-success text-success mr-2">
                            <i class="fas fa-edit"></i> Update
                        </a>

                        <a asp-action="Delete" asp-route-id="@hotel.Id" class="btn btn-dange text-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>

                    </div>
                </div>


            </div>

        </div>
    }



}
else
{
    <div class="mt-3 alert alert-warning">
        <h3>There is no Hotel</h3>

    </div>
}




 